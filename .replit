modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run Data Collection and Model Fine-tuning"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run Web Interface"

[[workflows.workflow]]
name = "Run Data Collection and Model Fine-tuning"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py --collect --process --fine-tune"

[[workflows.workflow]]
name = "Run Web Interface"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "python main.py --collect --process --fine-tune"]

[[ports]]
localPort = 5000
externalPort = 80
